<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#00000000"
    android:layout_marginEnd="1dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00000000"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/foremote"
            android:visibility="gone"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/nowitstime"
            android:padding="4dp"
            android:layout_marginEnd="2dp"
            app:tint="@color/white"
            android:src="@drawable/ic_round_quickreply_24" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp">



       <androidx.coordinatorlayout.widget.CoordinatorLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical|end"
           android:background="#00000000"
           android:visibility="gone"
           android:id="@+id/bdd"
        >

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/tia"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical|end"
               android:background="@drawable/bgg"
               android:maxWidth="180dp"
               android:padding="13dp"
               android:maxLines="2"
               android:ellipsize="end"
               android:layout_marginBottom="5dp"
               android:textColor="@color/white"
               android:textSize="15sp"
               android:textStyle="bold" />

           <ImageView
               android:layout_width="18dp"
               android:layout_height="18dp"
               android:layout_gravity="top|end"
               android:background="@drawable/nowitstime"
               android:padding="4dp"
               android:src="@drawable/ic_round_quickreply_24" />



       </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:background="#00000000"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/nowcanyoustopme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/replygradient"
                android:maxWidth="250dp"
                android:padding="13dp"
                android:text="dsd"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/teax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/fords"
            android:maxWidth="250dp"
            android:padding="13dp"
            android:text="d"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />


            <ImageView
                android:id="@+id/xwxx"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="top|end"
                android:background="@drawable/fordr"
                android:padding="4dp"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_edit_24" />




        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </LinearLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="4dp"
            android:background="#00000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/uspic"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/forphoto" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tzxz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="MS"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_anchor="@id/uspic"
                app:layout_anchorGravity="center" />


            <ImageView
                android:id="@+id/pendinh"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/pending"
                android:padding="2dp"
                android:src="@drawable/ic_baseline_access_time_24"/>


            <ImageView
                android:id="@+id/read_see"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:visibility="gone"
                android:layout_gravity="bottom|end"
                android:background="@drawable/forreadmessage"
                android:padding="2dp"
                android:src="@drawable/ic_baseline_mark_chat_read_24" />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>